package com.losporocas.estagiagil.dto;

public class AlunoDTO extends PessoaDTO {

	private int periodo;

	private boolean estagiando;

	private String nomeCoordenador;
	
	public AlunoDTO() {
		super();
	}
	
	public AlunoDTO(String matricula, String nome, String email, int periodo, boolean estagiando, String nomeCoordenador) {
		super(matricula, nome, email);
		this.periodo = periodo;
		this.estagiando = estagiando;
		this.nomeCoordenador = nomeCoordenador;
	}

	public int getPeriodo() {
		return periodo;
	}

	public void setPeriodo(int periodo) {
		this.periodo = periodo;
	}

	public boolean isEstagiando() {
		return estagiando;
	}

	public void setEstagiando(boolean estagiando) {
		this.estagiando = estagiando;
	}

	public String getNomeCoordenador() {
		return nomeCoordenador;
	}

	public void setNomeCoordenador(String nomeCoordenador) {
		this.nomeCoordenador = nomeCoordenador;
	}

	
}
